= simple_form_for([:admin,@garment], html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :kind, as: :select, collection: Garment::GARMENT_KINDS
    = f.input :description
    = f.input :image_url
    = f.input :price
    = f.input :sizes
    = f.association :collection
    = f.input :latest,as: :boolean
  .form-actions
    = f.submit 'Save'
